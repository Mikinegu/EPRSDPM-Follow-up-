generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Site {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  staff              Staff[]
  dls                DL[]
  skilled            Skilled[]
  attendanceRecords  AttendanceRecord[]
  staffAssignments   StaffAssignment[]
  dlAssignments      DLAssignment[]
  skilledAssignments SkilledAssignment[]
}

model Staff {
  id        String   @id @default(cuid())
  name      String
  siteId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  site        Site              @relation(fields: [siteId], references: [id], onDelete: Cascade)
  attendance  StaffAttendance[]
  assignments StaffAssignment[] @relation("NewStaffAssignments")

  @@index([siteId])
}

model Skilled {
  id        String   @id @default(cuid())
  name      String
  siteId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  site        Site                @relation(fields: [siteId], references: [id], onDelete: Cascade)
  attendance  SkilledAttendance[]
  assignments SkilledAssignment[] @relation("SkilledAssignments")

  @@index([siteId])
}

model DL {
  id        String   @id @default(cuid())
  name      String
  siteId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isActive  Boolean  @default(true)

  site       Site           @relation(fields: [siteId], references: [id], onDelete: Cascade)
  attendance DLAttendance[]
  assignments DLAssignment[] @relation("DLAssignments")

  @@index([siteId])
}

model AttendanceRecord {
  id        String   @id @default(cuid())
  date      String
  siteId    String
  createdAt DateTime @default(now())

  site            Site              @relation(fields: [siteId], references: [id], onDelete: Cascade)
  staffAttendance StaffAttendance[]
  dlAttendance    DLAttendance[]
  skilledAttendance SkilledAttendance[]

  @@unique([date, siteId])
  @@index([siteId])
  @@index([date])
}

model StaffAttendance {
  id                 String   @id @default(cuid())
  attendanceRecordId String
  staffId            String
  present            Boolean
  createdAt          DateTime @default(now())

  attendanceRecord AttendanceRecord @relation(fields: [attendanceRecordId], references: [id], onDelete: Cascade)
  staff            Staff            @relation(fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([attendanceRecordId, staffId])
  @@index([attendanceRecordId])
  @@index([staffId])
}

model SkilledAttendance {
  id                 String   @id @default(cuid())
  attendanceRecordId String
  skilledId          String
  present            Boolean
  createdAt          DateTime @default(now())

  attendanceRecord AttendanceRecord @relation(fields: [attendanceRecordId], references: [id], onDelete: Cascade)
  skilled          Skilled          @relation(fields: [skilledId], references: [id], onDelete: Cascade)

  @@unique([attendanceRecordId, skilledId])
  @@index([attendanceRecordId])
  @@index([skilledId])
}

model DLAttendance {
  id                 String   @id @default(cuid())
  attendanceRecordId String
  dlId               String
  present            Boolean
  createdAt          DateTime @default(now())

  attendanceRecord AttendanceRecord @relation(fields: [attendanceRecordId], references: [id], onDelete: Cascade)
  dl               DL               @relation(fields: [dlId], references: [id], onDelete: Cascade)

  @@unique([attendanceRecordId, dlId])
  @@index([attendanceRecordId])
  @@index([dlId])
}

model StaffAssignment {
  id        String   @id @default(cuid())
  siteId    String
  staffId   String
  date      String
  createdAt DateTime @default(now())

  site  Site  @relation(fields: [siteId], references: [id], onDelete: Cascade)
  staff Staff @relation("NewStaffAssignments", fields: [staffId], references: [id], onDelete: Cascade)

  @@unique([siteId, date, staffId])
  @@index([siteId, date])
  @@index([staffId])
}

model SkilledAssignment {
  id        String   @id @default(cuid())
  siteId    String
  skilledId String
  date      String
  createdAt DateTime @default(now())

  site    Site    @relation(fields: [siteId], references: [id], onDelete: Cascade)
  skilled Skilled @relation("SkilledAssignments", fields: [skilledId], references: [id], onDelete: Cascade)

  @@unique([siteId, date, skilledId])
  @@index([siteId, date])
  @@index([skilledId])
}

model DLAssignment {
  id     String   @id @default(cuid())
  siteId String
  dlId   String
  date   String
  createdAt DateTime @default(now())

  site Site @relation(fields: [siteId], references: [id], onDelete: Cascade)
  dl   DL   @relation("DLAssignments", fields: [dlId], references: [id], onDelete: Cascade)

  @@unique([siteId, date, dlId])
  @@index([siteId, date])
  @@index([dlId])
}
